<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Event
DELIMITER //
alter event event_top
on schedule
every 1 day
starts '2018-06-15 04:00:00'
do
BEGIN
	create or replace view U_Top5 as select url, count(*) as ucount from U_BOOK where url is not null and abid is null group by url order by ucount desc limit 5;
    create or replace view G_Top5 as select url, count(*) as ucount from G_BOOK where url is not null and abid is null group by url order by ucount desc limit 5;
    create or replace view A_Top5 as select a.url, count(*) as ucount from (select u.url, u.urlname from U_BOOK u where u.url is not null and u.abid is null union all select g.url, g.urlname from G_BOOK g where g.url is not null and g.abid is null) as a group by a.url order by ucount desc limit 5;
END //
 -->

<mapper namespace="site.book.social.dao.TopDAO">

	<select id="selectUTop5" resultType="site.book.social.dto.TopDTO">
		select URL, UCOUNT from U_Top5
	</select>
	
	<select id="selectUTop5Urlname" resultType="String">
		select URLNAME from U_BOOK where url = #{url} group by urlname order by count(*) desc limit 1
	</select>
	
	<select id="selectGTop5" resultType="site.book.social.dto.TopDTO">
		select URL, UCOUNT from G_Top5
	</select>
	
	<select id="selectGTop5Urlname" resultType="String">
		select URLNAME from G_BOOK where url = #{url} group by urlname order by count(*) desc limit 1
	</select>
	
	<select id="selectATop5" resultType="site.book.social.dto.TopDTO">
		select URL, UCOUNT from A_Top5
	</select>
	
	<select id="selectATop5Urlname" resultType="String">
		select a.urlname 
		from (select u.url, u.urlname from U_BOOK u where u.url is not null and u.abid is null union all select g.url, g.urlname from G_BOOK g where g.url is not null and g.abid is null) as a 
		where url=#{url} 
		group by a.urlname 
		order by count(*) desc limit 1
	</select>
</mapper>